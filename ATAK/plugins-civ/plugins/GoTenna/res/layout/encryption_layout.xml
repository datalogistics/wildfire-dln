<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="fill_horizontal"
        android:padding="10dp">

        <!--<LinearLayout-->
        <!--android:orientation="horizontal"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="center_horizontal" >-->

        <!--<ImageView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:src="@mipmap/ic_launcher"-->
        <!--android:id="@+id/imageView2" />-->

        <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="match_parent"-->
        <!--android:gravity="center"-->
        <!--android:textAppearance="?android:attr/textAppearanceLarge"-->
        <!--android:text="Encryption Settings"-->
        <!--android:id="@+id/textView5" />-->

        <!--</LinearLayout>-->


        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Encryption"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/encryption_switch" />


        <View xmlns:android="http://schemas.android.com/apk/res/android"
            android:minHeight="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@android:color/darker_gray" >
        </View>

        <TextView
            android:id="@+id/selected_key_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:gravity="center"
            android:hint="no encryption selected"/>

        <View xmlns:android="http://schemas.android.com/apk/res/android"
            android:minHeight="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@android:color/darker_gray" >
        </View>

        <ListView
            android:id="@+id/encryption_key_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:choiceMode="singleChoice"
            android:listSelector="#bb7700"/>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:paddingRight="5dp">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add"
                    android:id="@+id/add_key_button"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    style="@style/darkButton"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:paddingRight="5dp">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    style="@style/darkButton"
                    android:id="@+id/select_key_button"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:paddingRight="5dp">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Share"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    style="@style/darkButton"
                    android:id="@+id/share_key_button" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Remove"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    style="@style/darkButton"
                    android:id="@+id/remove_key_button" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
