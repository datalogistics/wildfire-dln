<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="fill_horizontal">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:layout_above="@+id/chat_ll"
        android:layout_below="@+id/heading_ll"
        android:id="@+id/scrollView">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:id="@+id/chat_history_text"/>

    </ScrollView>

    <LinearLayout
        android:id="@+id/chat_ll"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:weightSum="1">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="fill_horizontal"
                android:id="@+id/messageText"
                android:maxLength="160"
                android:layout_weight="0.90" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send"
                android:id="@+id/sendMessageButton"
              android:paddingTop="5dp"
              android:paddingBottom="5dp"
              style="@style/darkButton"
                android:layout_weight="0.10" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:padding="5dp"
            android:weightSum="1">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RGR"
                android:id="@+id/quickChat1"
                android:paddingRight="5dp"
              android:paddingTop="5dp"
              android:paddingBottom="5dp"
              style="@style/darkButton"
                android:layout_weight="0.25" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\@LLC"
                android:id="@+id/quickChat2"
              android:paddingTop="5dp"
              android:paddingBottom="5dp"
              style="@style/darkButton"
                android:layout_weight="0.25" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\@VDO"
                android:id="@+id/quickChat3"
              android:paddingTop="5dp"
              android:paddingBottom="5dp"
              style="@style/darkButton"
                android:layout_weight="0.25" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\@Brch"
                android:id="@+id/quickChat4"
              android:paddingTop="5dp"
              android:paddingBottom="5dp"
              style="@style/darkButton"
                android:layout_weight="0.25" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/heading_ll"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="goTenna"
            android:gravity="center"
            android:id="@+id/textView"
            android:layout_marginRight="5dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Sync"
            android:id="@+id/scanForGotennaButton"
            android:layout_gravity="center_horizontal"
              android:paddingTop="5dp"
              android:paddingBottom="5dp"
              style="@style/darkButton"
            android:layout_weight="1"
            android:layout_marginRight="5dp"/>

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/ic_gotenna_battery">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="10dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingBottom="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=""
                    android:textStyle="bold"
                    android:id="@+id/battery_level_text"
                    android:gravity="center"
                    android:textAlignment="gravity"/>

            </LinearLayout>

        </LinearLayout>

        <ImageButton
            android:id="@+id/settings_button"
            android:layout_weight=".15"
            android:layout_centerVertical="true"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitCenter"
              android:paddingTop="5dp"
              android:paddingBottom="5dp"
              style="@style/darkButton"
            android:src="@drawable/ic_menu_settings"
            android:background="@drawable/blank_background"/>

    </LinearLayout>

</RelativeLayout>
