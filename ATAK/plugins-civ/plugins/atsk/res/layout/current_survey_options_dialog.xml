<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#383838" >

    <Button
        android:id="@+id/current_button_current"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Make Current"
        android:background="@drawable/button_selector" />

    <Button
        android:id="@+id/current_button_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Details"
        android:background="@drawable/button_selector"/>

    <Button
        android:id="@+id/current_button_rename"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rename"
        android:background="@drawable/button_selector" />
    <Button
        android:id="@+id/current_button_clone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Clone"
        android:background="@drawable/button_selector" />
    
    <Button
        android:id="@+id/current_button_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:background="@drawable/button_selector" />
    
</LinearLayout>
