<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#383838"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/auto_space"
        android:layout_marginTop="@dimen/auto_space"
        android:orientation="horizontal" >

        <RadioGroup
            android:id="@+id/dz_crit_meas_type"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content" >
    
            <RadioButton
                android:id="@+id/radioRectangular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RECT" 
                android:checked="true" />

            <RadioButton
                android:id="@+id/radioCircular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CIRCULAR" />


        </RadioGroup>
    </LinearLayout>
    <View style="@style/atsk_Divider" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fadeScrollbars="false"
        android:clickable="true" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_marginRight="@dimen/scroll_margin"
            android:layout_marginLeft="@dimen/scroll_margin"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/rectButtons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/auto_space"
                    android:clickable="true"
                    android:gravity="center_horizontal"
                    android:text="@string/alignment"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/auto_size">
                </TextView>

                <com.gmeci.atsk.resources.LCRButton
                    android:id="@+id/lcr_selector"
                    android:visibility="visible"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/autoSetup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="30dip"
                    android:background="@drawable/edge_width_collect"
                    android:text=""/>

                <Button
                    android:id="@+id/cancelSetup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="30dip"
                    android:background="@drawable/cancel_collect"
                    android:visibility="gone"
                    android:text=""/>
            </LinearLayout>

            <TextView
                android:id="@+id/dz_crit_meas_text_centerpos_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/auto_space"
                android:clickable="true"
                android:gravity="center_horizontal"
                android:text="@string/center_position"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/auto_size">
            </TextView>

            <TextView
                android:id="@+id/dz_crit_meas_text_centerpos_val"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:gravity="right"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/auto_size" >
            </TextView>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/dz_crit_meas_text_radius_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/auto_space"
                    android:clickable="true"
                    android:gravity="center_horizontal"
                    android:text="@string/radius"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/auto_size"
                     >
                </TextView>

                <TextView
                    android:id="@+id/dz_crit_meas_text_radius_val"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/auto_space"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="right"
                    android:text="@string/not_available"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/auto_size"
                     >
                </TextView>

                <TextView
                    android:id="@+id/dz_crit_meas_text_radius_units"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/auto_space"
                    android:clickable="true"
                    android:gravity="right"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/auto_size"
                    android:visibility="gone">
                </TextView>
            </LinearLayout>

            <TextView
                android:id="@+id/dz_crit_meas_text_pos_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/auto_space"
                android:clickable="true"
                android:gravity="center_horizontal"
                android:text="@string/leading_edge"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/auto_size" >
            </TextView>

            <TextView
                android:id="@+id/dz_crit_meas_text_pos_val"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:gravity="right"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/auto_size" >
            </TextView>


            <TextView
                android:id="@+id/dz_crit_meas_text_dep_label"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:gravity="left"
                android:text="@string/trailing_edge"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/auto_size" >
            </TextView>

            <TextView
                android:id="@+id/dz_crit_meas_text_dep_val"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:gravity="right"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/auto_size" >
            </TextView>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/dz_crit_meas_text_height_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/auto_space"
                    android:clickable="true"
                    android:gravity="center_horizontal"
                    android:text="@string/elevation"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/auto_size" >
                </TextView>

                <TextView
                    android:id="@+id/dz_crit_meas_text_height_val"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/auto_space"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="right"
                    android:text="@string/not_available"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/auto_size" >
                </TextView>

                <TextView
                    android:id="@+id/dz_crit_meas_text_height_units"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/auto_space"
                    android:clickable="true"
                    android:gravity="right"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/auto_size"
                    android:visibility="gone">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/dz_crit_meas_text_length_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/auto_space"
                    android:clickable="true"
                    android:gravity="center_horizontal"
                    android:text="@string/length2"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/auto_size" >
                </TextView>

                <TextView
                    android:id="@+id/dz_crit_meas_text_length_val"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/auto_space"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="right"
                    android:text="@string/not_available"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/auto_size" >
                </TextView>

                <TextView
                    android:id="@+id/dz_crit_meas_text_length_units"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/auto_space"
                    android:clickable="true"
                    android:gravity="right"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/auto_size"
                    android:visibility="gone">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/dz_crit_meas_text_width_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/auto_space"
                    android:clickable="true"
                    android:gravity="center_horizontal"
                    android:text="@string/width"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/auto_size" >
                </TextView>

                <TextView
                    android:id="@+id/dz_crit_meas_text_width_val"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/auto_space"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="right"
                    android:text="@string/not_available"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/auto_size">
                </TextView>

                <TextView
                    android:id="@+id/dz_crit_meas_text_width_units"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/auto_space"
                    android:clickable="true"
                    android:gravity="right"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/auto_size"
                    android:visibility="gone">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/dz_crit_meas_text_dragheading_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/auto_space"
                    android:clickable="true"
                    android:gravity="center_horizontal"
                    android:text="@string/heading"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/auto_size" >
                </TextView>

                <TextView
                    android:id="@+id/dz_crit_meas_text_dragheading_val"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/auto_space"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="right"
                    android:text="@string/not_available"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/auto_size" >
                </TextView>

                <TextView
                    android:id="@+id/dz_crit_meas_text_dragheading_units"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/auto_space"
                    android:clickable="true"
                    android:gravity="right"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/auto_size" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/hlz_slope"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/hlz_slope_label_l"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/auto_space"
                        android:clickable="true"
                        android:gravity="center_horizontal"
                        android:text="@string/slope_l"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/auto_size" >
                    </TextView>

                    <TextView
                        android:id="@+id/hlz_slope_value_l"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/auto_space"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:gravity="right"
                        android:text="@string/not_available"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/auto_size" >
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/hlz_slope_label_w"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/auto_space"
                        android:clickable="true"
                        android:gravity="center_horizontal"
                        android:text="@string/slope_w"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/auto_size" >
                    </TextView>

                    <TextView
                        android:id="@+id/hlz_slope_value_w"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/auto_space"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:gravity="right"
                        android:text="@string/not_available"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/auto_size" >
                    </TextView>
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/details_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/auto_space_big"
                style="?android:attr/buttonStyleSmall"
                android:text="@string/details"
                android:textSize="@dimen/auto_size"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
