<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:background="#383838"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadeScrollbars="false"
        android:background="#383838" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/scroll_margin"
            android:layout_marginLeft="@dimen/scroll_margin"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/farp_info_dlg"
                style="@style/atsk_LabelTextView"
                android:layout_width="fill_parent"
                android:background="#000000"
                android:gravity="center_horizontal"
                android:text="FARP Info"
                android:textColor="#ff33b5e5" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#ffFFFFFF" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#383838"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/farp_ac_name_title"
                    style="@style/atsk_LabelTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AC Name:" />

                <TextView
                    android:id="@+id/farp_ac_name"
                    style="@style/atsk_LabelTextView"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/right" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#383838"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/farp_nose_title"
                    style="@style/atsk_LabelTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NOSE:" />

                <TextView
                    android:id="@+id/farp_nose"
                    style="@style/atsk_LabelTextView"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/not_available" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="4dp"
                android:background="#ffFFFFFF" />

            <TextView
                android:id="@+id/farp_fam_title"
                style="@style/atsk_LabelTextView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/farp_rx_shape_title" />

            <LinearLayout
                android:id="@+id/fam_layout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#383838"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/fam_positions"
                    style="@style/atsk_LabelTextView"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/not_available" />

                <ImageView
                    android:id="@+id/fam_image"
                    android:layout_width="48dip"
                    android:layout_height="48dip"
                    android:src="@drawable/atsk_farp_rx_layout_1" >
                </ImageView>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="4dp"
                android:background="#ffFFFFFF" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#383838"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/runway_info_cancel_button"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/atsk_cancel"
                    android:text="" />

                <Button
                    android:id="@+id/runway_info_save_button"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/atsk_save"
                    android:text="" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>
