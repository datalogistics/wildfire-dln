<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#383838"
    android:orientation="vertical"
    android:padding="20sp" >

    <TextView
        android:id="@+id/Titlestatic"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/auto_space"
        android:layout_marginTop="@dimen/auto_space"
        android:clickable="true"
        android:gravity="center_horizontal"
        android:text="  DZ CAPABILITY                            "
        android:textColor="#ff33b5e5"
        android:textSize="@dimen/auto_size" >
    </TextView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/dz_capability_dialog_text_radius_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/auto_space"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:text="Radius: "
            android:textColor="#FFFFFF"
            android:textSize="@dimen/auto_size"
             />

        <TextView
            android:id="@+id/dz_capability_dialog_text_radius_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/auto_space"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:text="TextView"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/auto_size"
             />

        <TextView
            android:id="@+id/dz_capability_dialog_text_radius_units"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/auto_space"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:text=" m"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/auto_size"
             />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/dz_capability_dialog_text_length_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/auto_space"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:text="Length: "
            android:textColor="#FFFFFF"
            android:textSize="@dimen/auto_size"
             />

        <TextView
            android:id="@+id/dz_capability_dialog_text_length_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/auto_space"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:text="TextView"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/auto_size"
             />

        <TextView
            android:id="@+id/dz_capability_dialog_text_length_units"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/auto_space"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:text=" m"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/auto_size"
             />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/dz_capability_dialog_text_width_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/auto_space"
            android:clickable="true"
