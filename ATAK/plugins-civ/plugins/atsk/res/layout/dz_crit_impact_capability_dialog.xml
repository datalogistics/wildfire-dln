            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/auto_space"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:text=" m"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/auto_size"
             />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/dz_capability_dialog_text_altitude_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/auto_space"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:text="Altitude (ft): "
            android:textColor="#FFFFFF"
            android:textSize="@dimen/auto_size"
             />

        <com.gmeci.atsk.az.spinners.ATSKSpinner
            android:id="@+id/dz_crit_capability_spin_altitiude"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bordered_spinner_selector" />
    </LinearLayout>

    <TableLayout
