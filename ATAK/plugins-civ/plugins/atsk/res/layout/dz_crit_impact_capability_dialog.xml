                android:gravity="center"
                android:text="SATB"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/dz_capability_dialog_text_CRRC"
                android:layout_weight="1"
                android:background="@drawable/cell_shape"
                android:gravity="center"
