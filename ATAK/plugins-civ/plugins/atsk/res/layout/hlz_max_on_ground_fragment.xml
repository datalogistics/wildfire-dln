<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fadeScrollbars="false"
        android:clickable="true" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_marginRight="@dimen/scroll_margin"
            android:layout_marginLeft="@dimen/scroll_margin"
            android:orientation="vertical" >

            <RadioGroup
                android:id="@+id/condition_selection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/auto_size" >
            </RadioGroup>

            <TextView
                android:id="@+id/criteria_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/auto_size"
                android:text="@string/unknown"/>

            <com.gmeci.atsk.az.spinners.ATSKSpinner
                android:id="@+id/helicopter_type_spinner"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bordered_spinner_selector"
                android:textSize="@dimen/auto_size" />
            <View
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:layout_marginTop="@dimen/auto_space"
                android:background="#FFFFFF" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Max On Ground:"
                android:textColor="#FFF"
                android:textSize="@dimen/auto_size" />

            <TextView
                android:id="@+id/max_on_ground_display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/light_blue"
                android:textSize="@dimen/auto_size" />
            <View
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:layout_marginTop="@dimen/auto_space"
                android:background="#FFFFFF" />

            <TextView
                android:id="@+id/surface_type_label"
                style="@style/atsk_LabelTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Surface Type:" />

            <com.gmeci.atsk.az.spinners.ATSKSpinner
                android:id="@+id/runway_surface_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/atsk_runway_surface_types" />

            
        </LinearLayout>
    </ScrollView>

</LinearLayout>
