<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/conversationHeaderOuter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/conversationHeader"
            android:padding="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/conversationImage"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:src="@drawable/takchat_xmpp_contact"/>
            <View
                android:id="@+id/conversationAvailable"
                android:layout_width="16dip"
                android:layout_height="16dip"
                android:layout_gravity="center_vertical"
                android:background="@drawable/status_circle"/>

        <LinearLayout
            android:id="@+id/conversationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/conversationTitle"
                android:paddingLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:singleLine="true"
                android:text="Conversation Title"/>

            <TextView
                android:id="@+id/conversationStatus"
                android:paddingLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="12dp"
                android:text="Contact Status"/>
            </LinearLayout>
        </LinearLayout>

        <ImageButton
            android:id="@+id/conversationContactPan"
            android:layout_width="32dip"
            android:layout_height="32dip"
            android:padding="6dp"
            android:src="@drawable/panto_button"
            style="@style/darkButton"
            android:scaleType="fitCenter"
            android:layout_alignParentRight="true"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lighter_gray"
            android:layout_alignBottom="@id/conversationHeader"/>
    </RelativeLayout>

    <ListView
        android:id="@+id/msgListView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:text="Hello World"
        android:layout_below="@+id/conversationHeaderOuter"
        android:layout_above="@+id/messageForm"/>

    <LinearLayout
        android:id="@+id/messageForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="#91f1f1f1"
        android:orientation="horizontal"
        android:paddingBottom="2dp">

        <com.atakmap.android.takchat.view.KeyboardListenerEditText
            android:id="@+id/messageEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/message_hint"
            android:layout_weight="1"
            android:ems="10"
            android:imeOptions="flagNoExtractUi"
            android:maxHeight="80dp" >
        </com.atakmap.android.takchat.view.KeyboardListenerEditText>

        <ImageButton
            android:id="@+id/sendMessageButton"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:background="@drawable/send_button"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/searchForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="#333"
        android:orientation="horizontal"
        android:paddingBottom="2dp"
        android:visibility="gone">

        <EditText
            android:id="@+id/messageSearchText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/search_hint"
            android:layout_weight="1"
            android:ems="10"
            android:imeOptions="flagNoExtractUi"
            android:maxHeight="80dp"/>

        <ImageButton
            android:id="@+id/exitSearchButton"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_gravity="center_vertical"
            android:background="@android:drawable/ic_menu_close_clear_cancel"/>

    </LinearLayout>


</RelativeLayout>