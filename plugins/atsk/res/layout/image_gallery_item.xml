<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.gmeci.atsk.resources.ThumbView
        android:id="@+id/gallery_img_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"/>
    
    <RelativeLayout
        android:id="@+id/gallery_img_select"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_gravity="top|left"
        android:background="@color/darker_gray"
        android:visibility="visible"
        android:padding="-5dp"
        android:layout_width="24dp"
        android:layout_height="24dp">
            <CheckBox
                android:id="@+id/gallery_img_checkbox"
                android:padding="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left"
                android:text="" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/gallery_img_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="2dp"
        android:background="#99000000"
        android:layout_alignParentBottom="true">
            <TextView
                android:id="@+id/gallery_img_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="12sp"
                android:singleLine="true"
                android:text="JPG" />

            <TextView
                android:id="@+id/gallery_img_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="2dp"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:textSize="10sp"
                android:singleLine="true"
                android:text="Image-1.jpg" />
    </LinearLayout>

</RelativeLayout>
