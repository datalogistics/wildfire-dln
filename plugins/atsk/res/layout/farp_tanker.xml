<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#383838"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fadeScrollbars="false">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/scroll_margin"
            android:layout_marginLeft="@dimen/scroll_margin"
            android:orientation="vertical">

            <com.gmeci.atsk.az.spinners.ATSKSpinner
                android:id="@+id/ac_spinner"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bordered_spinner_selector"
                android:layout_marginTop="@dimen/auto_space_big"/>

            <TextView
                android:id="@+id/Location_static"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="@string/location"
                android:textColor="#FFF"
                android:textSize="@dimen/auto_size">
            </TextView>

            <TextView
                android:id="@+id/Location"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:gravity="center"
                android:paddingBottom="@dimen/auto_space"
                android:text="NA "
                android:textColor="#FFF"
                android:textSize="@dimen/auto_size">
            </TextView>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/Rotation_static"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/auto_space"
                    android:clickable="true"
                    android:text="@string/rotation"
                    android:textColor="#FFF"
                    android:textSize="@dimen/auto_size">
                </TextView>

                <TextView
                    android:id="@+id/Rotation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/auto_space"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="right"
                    android:text="0"
                    android:textColor="#FFF"
                    android:textSize="@dimen/auto_size">
                </TextView>

                <TextView
                    android:id="@+id/Rotation_units"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/auto_space"
                    android:clickable="true"
                    android:gravity="right"
                    android:text=" M"
                    android:textColor="#FFF"
                    android:textSize="@dimen/auto_size">
                </TextView>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#FFF" />

            <TextView
                android:id="@+id/surface_static"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/auto_space_big"
                android:clickable="true"
                android:gravity="right"
                android:text="Surface:"
                android:textColor="#FFF"
                android:textSize="@dimen/auto_size">
            </TextView>

            <com.gmeci.atsk.az.spinners.ATSKSpinner
                android:id="@+id/runway_surface_spinner"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/auto_space"
                android:layout_marginBottom="@dimen/auto_space"
                android:background="@drawable/bordered_spinner_selector"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/details_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/auto_space_big"
                style="?android:attr/buttonStyleSmall"
                android:text="@string/details"
                android:textSize="@dimen/auto_size"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
