<?xml version="1.0" encoding="utf-8"?>
<com.atakmap.android.tools.ActionBarView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="0dp"
    android:layout_marginBottom="0dp">

    <ImageButton
        android:id="@+id/gallery_capture"
        android:padding="8dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/btn_gray"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_menu_quickpic"/>
    <ImageButton
        android:id="@+id/gallery_import"
        android:padding="8dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/btn_gray"
        android:scaleType="fitCenter"
        android:src="@drawable/toolbar_import"/>
    <ImageButton
        android:id="@+id/gallery_export"
        android:padding="8dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/btn_gray"
        android:scaleType="fitCenter"
        android:src="@drawable/toolbar_export"/>
    <ImageButton
        android:id="@+id/gallery_delete"
        android:padding="4dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/btn_gray"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_menu_delete"/>
    <Button
        android:id="@+id/gallery_action"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:padding="@dimen/auto_space_large"
        android:visibility="gone"
        android:background="@drawable/btn_gray"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:textSize="12sp"
        android:text="Export"/>
    <Button
        android:id="@+id/gallery_cancel"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:padding="@dimen/auto_space_large"
        android:visibility="gone"
        android:background="@drawable/btn_gray"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:textSize="12sp"
        android:text="Cancel"/>

</com.atakmap.android.tools.ActionBarView>