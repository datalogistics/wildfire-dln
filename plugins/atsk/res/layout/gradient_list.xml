<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">
    <ListView
        android:layout_width="1px"
        android:layout_height="0dp"
        android:layout_weight="1">
    </ListView>
    
    <LinearLayout 
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginRight="@dimen/scroll_margin">

        <ImageView
        android:id="@+id/img"
        android:layout_width="40dp"
        android:layout_height="50dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/auto_space">

            <TextView
                android:id="@+id/title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:singleLine="true"
                android:textColor="#FFFFFF"
                android:text="Test Gradient"
                android:textSize="14sp"/>

            <LinearLayout
                android:layout_width="140dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/detail_lz"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#FDFDFD"
                    android:singleLine="true"
                    android:textSize="@dimen/auto_size_small"/>
                <TextView
                    android:id="@+id/detail_sh"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#FDFDFD"
                    android:singleLine="true"
                    android:textSize="@dimen/auto_size_small"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="140dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/detail_gr"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#FDFDFD"
                    android:singleLine="true"
                    android:textSize="@dimen/auto_size_small"/>
                <TextView
                    android:id="@+id/detail_mn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#FDFDFD"
                    android:singleLine="true"
                    android:textSize="@dimen/auto_size_small"/>
            </LinearLayout>

            <TextView
                android:layout_width="140dp"
                android:id="@+id/detail"
                android:textColor="#FDFDFD"
                android:maxLines="2"
                android:layout_height="wrap_content"
                android:textSize="@dimen/auto_size_small"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>